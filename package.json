{
  "name": "marp",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build:pptx": "marp --pptx",
    "build:pdf": "marp --pdf",
    "build:html": "marp --html",
    "watch:pptx": "marp -w --pptx",
    "watch:pdf": "marp -w --pdf",
    "watch:html": "marp -w --html",
    "prebuild:html": "cp -rf src/docs/img/ ./dist/img/",
    "prewatch:html": "cp -rf src/docs/img/ ./dist/img/",
    "fix:format": "biome format --write .",
    "fix:lint": "biome lint --write .",
    "fix:check": "biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@marp-team/marp-cli": "catalog:"
  }
}
